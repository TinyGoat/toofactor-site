
<div class="form-header">
  <h2>Contact Us</h2>
</div>

<div class="form center">
  <%= form_tag make_contact_path do %>

    <p>
      <%= label_tag 'message[type]', "How can we help you?" %>
      <%= select_tag 'message[type]', options_for_select([['General Questions', 'general'], ['Billing', 'billing'], ['Support', 'support']]) %>
    </p>

    <p>
      <%= label_tag 'message[from]', 'Your Email' %>
      <%= email_field_tag 'message[from]', params[:message].present? ? params[:message][:from] : '', required: true %>
    </p>

    <p>
      <%= label_tag 'message[subject]', 'Subject' %>
      <%= text_field_tag 'message[subject]' %>
    </p>

    <p>
      <%= label_tag 'message[body]', 'Body' %>
      <%= text_area_tag 'message[body]', '', rows: 8 %>
    </p>

    <div class="form-actions">
      <%= submit_tag 'Make Contact', class: "btn small blue" %>
    </div>

  <% end %>
</div>
